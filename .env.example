# ============================================================
# ControlledChaos Environment Variables
# Copy this to .env.local and fill in your values
# ============================================================

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Neon Database
DATABASE_URL=postgresql://...@...neon.tech/controlledchaos?sslmode=require

# Anthropic (Claude Haiku for AI features)
ANTHROPIC_API_KEY=sk-ant-...

# Groq (Speech-to-text)
GROQ_API_KEY=gsk_...

# Cloudflare R2 (Media storage)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=controlled-chaos-media

# Resend (Email digests)
# Sign up at https://resend.com, create an API key, and verify your sending domain
RESEND_API_KEY=re_...
EMAIL_FROM=ControlledChaos <digest@yourdomain.com>

# Push Notifications (Web Push / VAPID)
# Generate keys: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# Vercel Cron Security
# Any random secret string — used to authenticate cron job requests
# Generate one: openssl rand -base64 32
CRON_SECRET=

# App URL (used in email links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Google Calendar (via Clerk OAuth — no separate key needed)
